


@model EmployeeManagement.Models.EmployeeDetail

@{
    ViewData["Title"] = "Detail";
}
<table class="table">
    <thead>
        <tr>
            <th>
                <section class="content-header">
                    <h1>
                        Employee Detail
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="~/Employee"><i class="fa fa-users"></i> Employee</a></li>
                        <li class="active">Detail</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="box box-warning">
                        <div class="box-body" id="employee-detail-table">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">FirstName</label>
                                <label for="inputEmail3" class="col-sm-9 control-label">@Model.BaseEmployee.FirstName</label>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">LastName</label>
                                <label for="inputEmail3" class="col-sm-9 control-label">@Model.BaseEmployee.LastName</label>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Age</label>
                                <label for="inputEmail3" class="col-sm-9 control-label">@Model.BaseEmployee.Age</label>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Gender</label>
                                <label for="inputEmail3" class="col-sm-9 control-label">@Model.BaseEmployee.GenderValue</label>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Department</label>
                                <div class="col-sm-10">
                                    <label for="inputEmail3" >@Model.BaseEmployee.DepartmentName</label>
                               </div>
                            </div>
                            <div class="form-group">
                               <label for="inputEmail3" class="col-sm-2 control-label">Manager</label>
                                 <div class="col-sm-10">
                                   <label for="inputEmail3">@Model.BaseEmployee.ManagerName</label>
                                 </div>

                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Salary</label>
                                <label for="inputEmail3" class="col-sm-9 control-label">@Model.BaseEmployee.Salary</label>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Date of Joining</label>
                                <label for="inputEmail3" class="col-sm-9 control-label">@Model.BaseEmployee.JoiningDate</label>
                            </div>
                            <input type="hidden" name="Id" value="@Model.BaseEmployee.Id" />
                        </div>
                    </div>
                    <button type="button" class="btn btn-warning pull-left" style="margin-bottom: 10px;" onclick="location.href='../../Employee/Update/@Model.BaseEmployee.Id'"><i class="fa fa-edit"></i> Edit Employee</button>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box box-warning">

                                    <div class="box-body" id="employee-detail-grid-container">
                                        <div id="employee-detail-grid1">
                                            <h3>Managers</h3>
                                            <div id="managers-container">
                                                <ul>


                                                    @{
        string space = string.Empty;
        string line = string.Empty;
        if (Model.Managers != null)
        {
            for (int i = 0; i < Model.Managers.Length; i++)
            {

                                                <li><span>@space</span><span>@line</span>@Html.DisplayFor(modelItem => Model.Managers[i].Name)</li>

space += "　　";
line = " └ ";
}
} }
                                                </ul>
                                            </div>
                                        </div>
                                        <divloyee-detail-grid2">
                                            <h3 class="box-title">Reporters</h3>

                                            <table id="employee-table" class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Id</th>
                                                        <th>Name</th>
                                                        <th>Department</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.ChildrenEmployeeList)
                                                {
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => item.FormattedId)</td>
                                                        <td><i class="fa fa-user-o"></i> @Html.DisplayFor(modelItem => item.Name)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                                                    </tr>
                                                }
                                                </tbody>
                                            </table>


                                    </div>
                                </div>
                            </div>
                        </div>

</section>

</table>