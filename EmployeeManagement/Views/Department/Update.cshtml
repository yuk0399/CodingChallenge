@model EmployeeManagement.Models.Department
<section class="content-header">
    <h1>
        Departments
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Department"><i class="fa fa-building"></i> Department</a></li>
        <li class="active">Update</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Update Department</h3>
        </div>

        <form class="form-horizontal" method="post" action="/DepartmentName/UpdateDepartment">
            <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">FirstName</label>
                        <div class="col-sm-10">
                            <input type="text" maxlength="20" class="form-control" name="DepartmentName" placeholder="DepartmentName" value="@Model.DepartmentName">
                        </div>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>